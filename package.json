{
  "name": "precta",
  "version": "0.0.1",
  "private": true,
  "type": "module",
  "workspaces": ["apps/*", "packages/*"],
  "scripts": {
    "dev": "bun run --parallel dev:backend dev:web",
    "dev:backend": "bun run --filter backend dev",
    "dev:web": "bun run --filter web dev",
    "build": "bun run --filter '@precta/*' build && bun run --filter backend build && bun run --filter web build",
    "test": "bun run --filter '*' test",
    "lint": "bun run --filter '*' lint",
    "typecheck": "bun run --filter '*' typecheck",
    "db:generate": "bun run --filter @precta/db db:generate",
    "db:migrate": "bun run --filter @precta/db db:migrate",
    "db:push": "bun run --filter @precta/db db:push",
    "db:studio": "bun run --filter @precta/db db:studio",
    "db:seed": "bun run --filter @precta/db db:seed",
    "clean": "rm -rf node_modules apps/*/node_modules packages/*/node_modules bun.lock"
  },
  "engines": {
    "node": ">=22",
    "bun": ">=1.1.0"
  },
  "devDependencies": {
    "@types/bun": "^1.3.4",
    "typescript": "^5.9.3"
  }
}
